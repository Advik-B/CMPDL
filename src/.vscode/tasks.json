{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build CLI app - MacOS",
            "type": "shell",
            "command": [
                "source venv/bin/activate",
                "&&",
                "pyinstaller cli.spec",
                "&&",
                "mv dist/cli/* dist",
                "&&",
                "rm -rf dist/cli",
                "&&",
                "rm -rf build",
            ]
        }
    ]
}